<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersistenceColor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="colorBox" parent="Theme.AppCompat.DayNight">
        <item name="android:background">@color/black</item>
    </style>

    <style name="redSwitchTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:colorControlActivated">@color/red</item>
    </style>

    <style name="greenSwitchTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:colorControlActivated">@color/green</item>
    </style>

    <style name="blueSwitchTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:colorControlActivated">@color/blue</item>
    </style>
</resources>